@model RecordRoster.Models.Album

@{
    ViewBag.Title = "Home | Randomizer";
}

<h2>Random Album</h2>

@if (ViewBag.RandomAlbum != null)
{
    <img src="@ViewBag.RandomAlbum.Cover" alt="Album Cover" width="250" height="250" style="border-radius: 10px;">
    <p><strong>Title:</strong> @ViewBag.RandomAlbum.Title </p>
    <p><strong>Artist:</strong> @ViewBag.RandomAlbum.Artist </p>
    <p><strong>Year:</strong> @ViewBag.RandomAlbum.ReleaseYear </p>
}
else
{
    <p>No albums found.</p>
}

<button id="randomizeBtn" class="btn btn-primary">Randomize 🎲</button>
<a href="@Url.Action("Library", "Album")" class="btn btn-primary">Show Library 📚</a>

<script>
    document.getElementById("randomizeBtn").addEventListener("click", function () {
        location.reload();
    });
</script>