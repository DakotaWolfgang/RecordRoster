@model RecordRoster.Models.Album

@{
    ViewBag.Title = Model.Title;
}

<p>
    <a href="@Url.Action("Library", "Album")" class="btn btn-primary">&lt;- Back to Library</a>
</p>

<h2>@Model.Title</h2>

<img src="@Model.Cover" alt="Album Cover" width="250" height="250" style="border-radius: 5px; margin-bottom: 10px;">
<p><strong>Title:</strong> @Model.Title </p>
<p><strong>Artist:</strong> @Model.Artist </p>
<p><strong>Year:</strong> @Model.ReleaseYear </p>
<p><strong>Tracklist:</strong></p>
@if (Model.Songs != null && Model.Songs.Any())
{ 
    <table class="table">
        <tr>
            <th>Track #</th>
            <th>Title</th>
        </tr>
        @foreach (var song in Model.Songs.OrderBy(s => s.TrackNumber))
        { 
            <tr>
                <td>@song.TrackNumber</td>
                <td>@song.Title</td>
            </tr>
        }
    </table>
}
else
{
    <p>No tracks found for this album.</p>
}
<p>
    <a href="@Url.Action( "Add", "Song", new { albumId = Model.Id})" class="btn btn-secondary">
        Add New Track
    </a>
</p>